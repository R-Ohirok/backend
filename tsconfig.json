{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "lib": ["ES2023"],

    /* Modules */
    "module": "node18",
    "moduleResolution": "node16",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,
  }
}
